@model Lab4.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Show ads for Houses @Model.Community.Title</h1>

<p>
    <a asp-route-id="@Model.Community.CommunityID" asp-action="Create">Upload New</a>
</p>
<p>
    <a asp-controller="Communities" asp-action="Index">Back to List</a>
</p>
@if (Model.Advertisements.Count() == 0)
{
    <p>There are no files to display.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    File Name
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Advertisements)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <img src="@item.Url" style="max-width: 400px;" />
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
