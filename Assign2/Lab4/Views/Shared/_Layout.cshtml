<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School communities</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
</head>
<body style="background-color: #D9D9D9;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container" >
                <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="font-size:110%; font-weight:bold; font-family:Goudy Old Style">Draco Dormiens Nunquam Titillandus</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1" style="font-family:Goudy Old Style">
                        <li class="nav-item" style="font-size:110%; font-weight:bold">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Hogwarts</a>
                        </li>
                        <li class="nav-item" style="font-size:110%; font-weight:bold">
                            <a class="nav-link text-dark" asp-controller="Students" asp-action="Index">Students</a>
                        </li>
                        <li class="nav-item" style="font-size:110%; font-weight:bold">
                            <a class="nav-link text-dark" asp-controller="Communities" asp-action="Index">Houses</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @RenderSection("Scripts", required: false)
</body>
</html>