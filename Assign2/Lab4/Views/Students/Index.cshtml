@model Lab4.Models.ViewModels.CommunityViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Enrollment Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.StudentID">Select</a> |
                    <a asp-action="EditMembership" asp-route-id="@item.StudentID">Edit Membership</a> |
                    <a asp-action="Edit" asp-route-id="@item.StudentID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StudentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Communities != null)
    {
    <h3>
        Member of the following communities
    </h3>
        <table class="table">
            <tr>
                @if (Model.Communities.Count() > 0)
                {
                    <th> Name </th>
                }
                else
                {
                    <th> No name record exist </th>
                }
            </tr>
            @foreach (var item in Model.Communities)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                </tr>
            }
        </table>
    }