@page
@model Lab5.Pages.AnswerImages.DeleteModel
@{
    Layout = "_Layout";
}

<div class="container">
    <main role="main" class="pb-3">
        <h1>Delete</h1>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Answer</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AnswerImage.FileName)</dt>
                <dd class="col-sm-2"> @Html.DisplayNameFor(model => model.AnswerImage.Url)</dd>
                <dt class="col-sm-2">Image</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AnswerImage.Url)
                    <img src="@Model.Url" style="max-width:400px">
                </dd>
            </dl>
            <form method="post" asp-for="AnswerImage.AnswerImageId">
                <input type="hidden" data-val="true" data-val-required="The AnswerImageId field is required." id="AnswerImageId" name="AnswerImageId" value="1" />
                <input type="submit" value="Delete" class="btn btn-danger">
                " | "
                <a asp-page="./Index">Back to List</a>
                <input name="__RequestVerificationToken" type="hidden" value="">
            </form>
        </div>
    </main>
</div>
